# Security Configuration
CORS_ORIGIN=http://localhost:5173
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_change_in_production

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
